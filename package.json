{
  "name": "web-devtools",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:client": "cd packages && cd dev-ui && yarn dev",
    "dev:node": "cd packages && cd core && yarn dev",
    "dev:webpack": "cd packages && cd webpack-devtool-plugin && yarn dev",
    "dev": "run-p dev:node dev:webpack dev:client",
    "start": "cd examples && cd cra-app && yarn start",
    "clean": "lerna clean",
    "format": "prettier --write ./packages && npm run lint",
    "lint": "eslint ./packages --ext js,jsx,ts,tsx --fix --color",
    "build": "cd packages && cd core && yarn build && cd .. && cd webpack-devtool-plugin && yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wen-haoming/web-devtools.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wen-haoming/web-devtools/issues"
  },
  "gitHooks": {
    "pre-commit": "lint-staged --concurrent false",
    "commit-msg": "fabric verify-commit"
  },
  "lint-staged": {
    "*": "prettier --write",
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/wen-haoming/web-devtools#readme",
  "devDependencies": {
    "@typescript-eslint/parser": "^4.28.5",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@umijs/fabric": "2.6.2",
    "chokidar": "^3.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "typescript": "^4.4.2",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "eslint-define-config": "^1.0.9",
    "eslint-plugin-node": "^11.1.0"
  }
}
