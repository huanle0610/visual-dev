{
  "name": "web-devtools",
  "private": true,
  "version": "1.0.0",
  "engines": {
    "node": ">=10.0.0"
  },
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:ui": "cd packages && cd dev-ui && yarn dev",
    "dev:visual-dev": "cd packages && cd visual-dev && yarn dev",
    "build:before": "node ./scripts/clear.js",
    "build:ui": "cd ./packages/dev-ui && yarn build",
    "build:visual-dev": "cd ./packages/visual-dev  && yarn build",
    "build:end": "node ./scripts/moveFiles.js",
    "build": " run-s build:*",
    "dev": "run-p dev:*",
    "start": "cd examples && cd cra-app && yarn start",
    "clean": "lerna clean",
    "format": "prettier --write ./packages && npm run lint",
    "lint": "eslint ./packages --ext js,jsx,ts,tsx --fix --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wen-haoming/web-devtools.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wen-haoming/web-devtools/issues"
  },
  "gitHooks": {
    "pre-commit": "npm run build:before && lint-staged --concurrent false",
    "commit-msg": "fabric verify-commit"
  },
  "lint-staged": {
    "*": "prettier --write",
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "homepage": "https://github.com/wen-haoming/web-devtools#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.28.5",
    "@umijs/fabric": "2.6.2",
    "chokidar": "^3.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "fs-extra": "^10.0.0",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.4.1",
    "typescript": "^4.4.2",
    "yorkie": "^2.0.0"
  },
  "dependencies": {
    "eslint-define-config": "^1.0.9",
    "eslint-plugin-node": "^11.1.0"
  }
}
